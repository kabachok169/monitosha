{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "module": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "target": "es5",
    "allowJs": true,
    "experimentalDecorators" : false,
    "lib": ["es2017" , "dom"],
    "baseUrl": "src",
    "noEmitHelpers": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "./src/",
  ]
}
